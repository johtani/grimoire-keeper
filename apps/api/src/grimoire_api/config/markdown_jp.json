{   
    "name": "markdown",
    "schema": "v1",
    "description": "Recipe for markdown documents in Japanese",
    "language": "jp",
    "metadata": {
        "version": "0.1.0",
        "author": "Jun Ohtani"
    },
    "recipe": {
        "delimiters": ["。", "、", "！", "？", "\n"],
        "include_delim": "prev",
        "recursive_rules": {
            "levels": 
        [
            {
                "delimiters": [
                    "######",
                    "#####",
                    "####",
                    "###",
                    "##",
                    "#"
                ],
                "whitespace": false,
                "include_delim": "next"
            },
            {
                "delimiters": [
                    "\n\n",
                    "\n\r"
                ],
                "whitespace": false,
                "include_delim": "prev"
            },
            {
                "delimiters": [
                    "\n",
                    "\r"
                ],
                "whitespace": false,
                "include_delim": "prev"
            },
            {
                "delimiters": [
                    "。",
                    "、",
                    "！",
                    "？"
                ],
                "whitespace": false,
                "include_delim": "prev"
            },
            {
                "delimiters": null,
                "whitespace": false,
                "include_delim": "prev"
            }
            ]
        }
    }
}